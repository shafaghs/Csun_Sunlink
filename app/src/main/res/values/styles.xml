<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyleFillIn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/button_style_fillin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditTextSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/serach_edit_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="containerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/light_grey_border</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Styles for the top bar of the home page with a picture -->
    <style name="HomePageMenyBar">
        <item
            name="android:textColor">@color/white</item>
        <item
            name="android:textSize">16sp</item>
        <!-- <item
             name="android:textAllCaps">false</item> -->
    </style>

    <!-- Styles for the pop up categories manu on home page -->
    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item
            name="android:itemBackground">@drawable/popupbackground</item>
        <item
            name="android:textColor">@color/colorPrimaryLight1</item>
    </style>
</resources>
