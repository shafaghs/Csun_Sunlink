<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <!-- Personal Statement-->
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/field_perstmt"
                    android:text="Personal Statement"
                    android:textSize="14dp"
                    android:layout_width="110dp"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp" />


                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" P Stmt"
                    android:textSize="14dp"
                    android:paddingLeft="10dp"
                    android:id = "@+id/edit_ps_field"
                    android:layout_gravity="center_vertical"
                    android:textStyle="normal|bold"
                    />

            </TableRow>
            <!-- Experience -->
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/field_exp"
                    android:text="Experience"
                    android:textSize="14dp"
                    android:layout_width="110dp"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp" />


                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" P Stmt"
                    android:textSize="14dp"
                    android:paddingLeft="10dp"
                    android:id = "@+id/edit_exp_field"
                    android:layout_gravity="center_vertical"
                    android:textStyle="normal|bold"
                    />

            </TableRow>
            <!--Skills -->
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/field_skills"
                    android:text="Skills"
                    android:textSize="14dp"
                    android:layout_width="110dp"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp" />


                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" P Stmt"
                    android:textSize="14dp"
                    android:paddingLeft="10dp"
                    android:id = "@+id/edit_skills_field"
                    android:layout_gravity="center_vertical"
                    android:textStyle="normal|bold"
                   />
            </TableRow>

            <!-- Projects -->
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/field_projects"
                    android:text="Projects"
                    android:textSize="14dp"
                    android:layout_width="110dp"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp" />


                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" P Stmt"
                    android:textSize="14dp"
                    android:paddingLeft="10dp"
                    android:id = "@+id/edit_projects_field"
                    android:layout_gravity="center_vertical"
                    android:textStyle="normal|bold"
                    />

            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/save_proff"
            style="@style/ButtonStyleFillIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center_horizontal|center_vertical"
            android:text="Save"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="14sp"
            />


    </LinearLayout>
</ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"

        android:background="@color/colorPrimaryDark"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</android.support.v4.widget.DrawerLayout>