<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".75"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_job_id"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.25"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:id="@+id/search_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector_style"
            android:gravity="start"
            android:textColor="#000000"
            android:text="title"/>

        <TextView
            android:id="@+id/search_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector_style"
            android:gravity="start"
            android:textColor="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_company_area"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:textSize="@dimen/small_text_size"
                android:textColor="#000000"
                android:text="as"/>

            <TextView
                android:layout_toEndOf="@id/search_company_area"
                android:id="@+id/search_posted_date"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:textColor="#000000"
                android:text="as"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>